---
import WeekList from "~components/WeekList.astro";

const rangeOfDaysToDisplay = 7;
const daysList = [];

for (let index = rangeOfDaysToDisplay; index >= -rangeOfDaysToDisplay; index--) {
  const element = daysList.push(index);
}
---

<ul class="weeklist">
  {
    daysList.map((offset) => <WeekList offsetWeek={offset} />)
  }
</ul>
