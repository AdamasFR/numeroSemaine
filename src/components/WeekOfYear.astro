---
import { getISOWeek, endOfWeek, startOfWeek, format } from "date-fns";

import { fr } from "date-fns/locale";

const locales = { fr };

const date = new Date();
const weekNumber = getISOWeek(date);

const lastWeekDay = format(
  endOfWeek(date, {
    weekStartsOn: 1,
  }),
  "EEEE d MMMM",
  {
    locale: fr,
  }
);
const firstWeekDay = format(
  startOfWeek(date, {
    weekStartsOn: 1,
  }),
  "EEEE d MMMM",
  {
    locale: fr,
  }
);
---

<div>
  <h1>{weekNumber}</h1>
  <p>La semaine commence le {firstWeekDay} et se termine le {lastWeekDay}</p>
</div>
